{
  "name": "zilfire-core",
  "version": "1.0.0",
  "description": "Zilfire Core Workspace",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "concurrently \"pnpm --filter theme-demo dev\" \"pnpm --filter @zilfire/core-theme dev\"",
